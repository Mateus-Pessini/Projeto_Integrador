<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastro.CadCliente"
    android:orientation="vertical"
    android:background="@color/prata">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/cabecalho">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/titulo"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="DentiCare"
            android:textStyle="bold"
            android:textSize="33dp"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lateral"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/formaimage"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Picininha"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"
                android:id="@+id/btAgendarRecep">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/calendario"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Agendamentos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"
                android:id="@+id/btMeusDados">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pessoa"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Meus Dados"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btConsultaRecep">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/document"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Consultas"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btPdfRecep">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pdf"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Gerar PDF"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/column"
                android:id="@+id/btCadClienteRecep">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pessoa"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Cadastrar Clientes"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btCadFotoRecep">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/img"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Cadastrar Fotos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"
                android:id="@+id/btSair">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/exit"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Sair"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro Cliente"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="650dp"
                android:layout_height="5dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Nome Completo:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="País:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="250dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="40dp">

                <EditText
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextNomeCompleto"/>

                <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/spinnerPais"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Telefone:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Estado:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="250dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="40dp">

                <EditText
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextTelefone"
                    android:inputType="number"/>

                <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/spinnerEstado"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="CPF:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Cidade:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="250dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="40dp">

                <EditText
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextCPF"
                    android:inputType="number"/>

                <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/spinnerCidade"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="RG:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Bairro:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="250dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="40dp">

                <EditText
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextRG"
                    android:inputType="number"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextBairro"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="E-mail:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Rua:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="250dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="40dp">

                <EditText
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextEmail"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextRua"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="CEP:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Complemento:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="250dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="40dp">

                <EditText
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextCEP"
                    android:inputType="number"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:id="@+id/editTextComplemento"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Numero:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borda1"
                    android:textColor="@color/black"
                    android:id="@+id/editTextNumero"
                    android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginLeft="450dp"
                android:layout_marginTop="60dp">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/botaovermelho"
                    android:text="Cancelar"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:id="@+id/btCancel"/>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/botaoverde"
                    android:text="Salvar"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/btSalvar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
