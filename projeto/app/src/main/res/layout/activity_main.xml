<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/fundo">

    <LinearLayout
        android:layout_width="1280dp"
        android:layout_height="50dp"
        android:background="@color/cabecalho">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/titulo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="DentiCare"
            android:textStyle="bold"
            android:textSize="33dp"
            android:textColor="#0069BA"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="750dp"
            android:background="@color/lateral"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/calendario"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Agendamentos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btAgendamento"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/document"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Consultas"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btConsultas"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pdf"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Gerar PDF"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btGerarPDF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pessoa"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="10dp"
                    android:text="Cadastrar Clientes"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btCadastrarCliente"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/img"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="10dp"
                    android:text="Cadastrar Fotos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btCadastrarFotos"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/exit"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Sair"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="800dp"
                android:layout_height="600dp"
                android:src="@drawable/medicocinza"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="70dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>