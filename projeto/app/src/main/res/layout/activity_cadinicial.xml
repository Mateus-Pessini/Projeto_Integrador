<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadInicial"
    android:orientation="vertical"
    android:background="@color/azul">

    <LinearLayout
        android:layout_width="1280dp"
        android:layout_height="70dp"
        android:background="@color/cabecalho">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/titulo"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="DentiCare"
            android:textStyle="bold"
            android:textSize="33dp"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="550dp"
            android:background="@drawable/borda4"
            android:orientation="vertical"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100dp">

            <TextView
                android:layout_width="230dp"
                android:layout_height="69dp"
                android:text="Cadastro"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="E-mail:"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:background="@drawable/borda2"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Senha:"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:background="@drawable/borda2"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"/>
            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="55dp">
                <RadioButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/checkbox"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Sou Dentista"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="55dp">
                <RadioButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/checkbox"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:text="Sou Recepcionista"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:text="JÃ¡ tem Login?"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:text="Clique Aqui"
                    android:textColor="#000066"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/tvLogin"/>
            </LinearLayout>
            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="Logar"
                android:backgroundTint="@color/verdebotao"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/btLogar1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="600dp"
                android:layout_height="500dp"
                android:src="@drawable/medicosemfundo"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>