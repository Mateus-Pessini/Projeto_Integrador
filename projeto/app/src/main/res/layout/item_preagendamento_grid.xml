<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtNomePessoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:paddingBottom="5dp"
                android:text="Texto Item"
                android:clickable="true"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtDataAgendamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Texto sub Item"
                android:textColor="#848484"
                android:clickable="true"
                android:textSize="25sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconConfirmar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/check"
                android:layout_marginHorizontal="20dp"/>

            <ImageView
                android:id="@+id/iconEditar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/editagendamento"
                android:layout_marginHorizontal="20dp"/>

            <ImageView
                android:id="@+id/iconRemover"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/remove" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>
</LinearLayout>