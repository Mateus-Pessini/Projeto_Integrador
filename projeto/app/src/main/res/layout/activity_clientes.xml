<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Clientes"
    android:orientation="vertical"
    android:background="@color/prata">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/cabecalho">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/titulo"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:text="DentiCare"
                android:textStyle="bold"
                android:textSize="33dp"
                android:textColor="#FFFFFFFF"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="9dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="732dp"
                android:layout_weight="1"
                android:background="@color/lateral"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/formaimage"
                        android:id="@+id/ivImgDentista"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Nome"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:id="@+id/tvNome"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btAgendarRecep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/calendario" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Agendamentos"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btMeusDados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/pessoa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Meus Dados"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btConsultaRecep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/document" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Consultas"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btPdfRecep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/pdf" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Gerar PDF"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btCadClienteRecep"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/column">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/pessoa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Clientes"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btCadFotoRecep"
                    android:layout_width="210dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Cadastrar Fotos"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btSair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/exit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Sair"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Clientes"
                    android:textColor="@color/black"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="650dp"
                    android:layout_height="5dp"
                    android:background="@android:color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="20dp">

                    <EditText
                        android:id="@+id/txtNomeCliente"
                        android:padding="5dp"
                        android:layout_width="400dp"
                        android:layout_height="40dp"
                        android:background="@drawable/editext" />

                    <Button
                        android:id="@+id/btBuscaCliente"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Buscar"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:background="@drawable/botaoazul"
                        android:layout_marginHorizontal="40dp"/>

                    <Button
                        android:id="@+id/btAddCliente"
                        android:layout_width="220dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bordabotaoazul"
                        android:text="+ Adicionar Cliente"
                        android:layout_marginLeft="110dp"
                        android:textSize="18dp"/>

                </LinearLayout>

                <GridView
                    android:id="@+id/gvClientes"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:numColumns="1"
                    android:background="@drawable/borda_gridview"
                    android:padding="10dp"
                    android:columnWidth="600dp"/>

                <Button
                    android:id="@+id/btVoltar"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Voltar"
                    android:textSize="20dp"
                    android:background="@drawable/botaoverde"
                    android:layout_marginHorizontal="400dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>