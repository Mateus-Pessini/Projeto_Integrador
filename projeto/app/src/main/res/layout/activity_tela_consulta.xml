<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela_consulta"
    android:orientation="vertical"
    android:background="@color/fundo">

    <LinearLayout
        android:layout_width="1280dp"
        android:layout_height="50dp"
        android:background="@color/cabecalho">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/titulo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="DentiCare"
            android:textStyle="bold"
            android:textSize="33dp"
            android:textColor="#0069BA"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="750dp"
            android:background="@color/lateral"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/calendario"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Agendamentos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/column">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/document"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Consultas"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pdf"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Gerar PDF"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pessoa"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="10dp"
                    android:text="Cadastrar Clientes"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/img"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="10dp"
                    android:text="Cadastrar Fotos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:text="Status"
                            style="@style/TableCell"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                        <TextView
                            android:text="Hora"
                            style="@style/TableCell"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                        <TextView
                            android:text="Nome"
                            style="@style/TableCell"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                        <TextView
                            android:text="Tipo de Consulta"
                            style="@style/TableCell"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                        <TextView
                            android:text="Data"
                            style="@style/TableCell"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                        <TextView
                            android:text="Valor"
                            style="@style/TableCell"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>