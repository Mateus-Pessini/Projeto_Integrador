<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agenda"
    android:orientation="vertical"
    android:background="@color/fundo">

    <LinearLayout
        android:layout_width="1280dp"
        android:layout_height="70dp"
        android:background="@color/cabecalho">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/titulo"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="DentiCare"
            android:textStyle="bold"
            android:textSize="33dp"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="730dp"
            android:background="@color/lateral"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/column">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/calendario"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Agendamentos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/document"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Consultas"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pdf"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:text="Gerar PDF"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/pessoa"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:text="Cadastrar Clientes"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:src="@drawable/img"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:text="Cadastrar Fotos"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendamento"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="650dp"
                android:layout_height="5dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="<"
                    android:textColor="@color/purple_700"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:textSize="40sp"/>
                
                <TextView
                    android:id="@+id/monthYearTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Agosto de 2023"
                    android:textSize="35sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=">"
                    android:textColor="@color/purple_700"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:textSize="40sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DOMINGO"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SEGUNDA"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TERÃ‡A"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QUARTA"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QUINTA"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SEXTA"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SABADO"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/calendarRecycleView"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>